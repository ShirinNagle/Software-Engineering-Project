<h2>Edit Existing Album</h2>
<%= form_tag album_path(@album), :method => :put do %>

  <%= label :album, :artist, 'Artist', :class => 'col-form-label' %>
  <%= text_field :album, 'artist', :class => 'form-control' %>

  <%= label :album, :title, 'Title', :class => 'col-form-label' %>
  <%= text_field :album, 'title', :class => 'form-control' %>

  <%= label :album, :review, 'Review', :class => 'col-form-label' %>
  <%= text_field :album, 'review', :class => 'form-control' %>

  <%= label :album, :rating, 'Rating', :class => 'col-form-label'  %>
  <%= select :album, :rating, ['0','1','2','3','4','5'], {}, {:class => 'form-control col-1'} %>
  
  
  
  <%= label :album, :release_date, 'Released On', :class => 'col-form-label'  %>
  <%= date_select :album, :release_date, {}, :class => 'form-control col-2 d-inline' %>
  <br/>
  <%= submit_tag 'Update Album Info', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', albums_path, :class => 'btn btn-secondary' %>
<% end %>
